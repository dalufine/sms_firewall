<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quazar.sms_firewall.activities.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/top_panel"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <ImageButton
                    style="@style/HelpButton" 
                    android:contentDescription="@string/default_text"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="-25dp"
                android:contentDescription="@string/default_text"
                android:src="@drawable/text_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:gravity="center" >

            <ImageView
                android:id="@+id/logo"
                style="@style/Logo"
                android:contentDescription="@string/default_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stats"
            style="@style/StatisticsPanel"
            android:layout_weight="3" >

            <TextView
                style="@style/GroupHeaderText"
                android:text="@string/statistics" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:contentDescription="@string/default_text"
                    android:src="@drawable/traffic" />

                <LinearLayout
                    style="@style/VCenterPanel"
                    android:layout_marginLeft="10dp" >

                    <TextView
                        android:id="@+id/stat_blocked"
                        style="@style/StatisticsFont.Red"
                        android:text="@string/stat_blocked" />

                    <TextView
                        android:id="@+id/stat_suspicious"
                        style="@style/StatisticsFont.Yellow"
                        android:text="@string/stat_suspicious" />

                    <TextView
                        android:id="@+id/stat_received"
                        style="@style/StatisticsFont.Green"
                        android:text="@string/stat_recieved" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ButtonsPanel"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                style="@style/GroupHeaderText"
                android:layout_marginBottom="10dp"
                android:text="@string/add_new_sms_filter" />

            <LinearLayout
                android:id="@+id/fast_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/fast_phone_number"
                    style="@style/ImageButtonWithText"
                    android:drawableLeft="@drawable/phone_number_type_selector"
                    android:onClick="onPhoneNumberClick"
                    android:text="@string/phone_number" />

                <Button
                    android:id="@+id/fast_word"
                    style="@style/ImageButtonWithText"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/word_type"
                    android:onClick="onWordClick"
                    android:text="@string/word" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_panel"
        style="@style/NavPanel" >

        <ImageButton
            android:id="@+id/filters"
            style="@style/FiltersButton"
            android:contentDescription="@string/default_text"
            android:onClick="onShowFilters" />

        <ImageButton
            android:id="@+id/logs"
            style="@style/LogButton"
            android:contentDescription="@string/default_text"
            android:onClick="onShowLogs" />

        <ImageButton
            android:id="@+id/tops"
            style="@style/TopButton"
            android:contentDescription="@string/default_text"
            android:onClick="onShowTops" />

        <ImageButton
            android:id="@+id/settings"
            style="@style/SettingsButton"
            android:contentDescription="@string/default_text"
            android:onClick="onShowSettings" />
    </LinearLayout>

</LinearLayout>