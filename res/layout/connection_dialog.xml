<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:minWidth="250dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/con_value_title"
        android:text="@string/inet_conn_on"
        android:layout_marginBottom="15dp"
        style="@style/DialogHeaderText" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/wifiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yourEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/wi_fi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/MobNetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/mobile_internet" />
    </LinearLayout>

    <Button
        style="@style/BlackButton"
        android:id="@+id/closeConnPopup"   
        android:layout_marginTop="15dp"     
        android:text="@string/close" />

</LinearLayout>