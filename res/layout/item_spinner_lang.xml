<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="35dp"
    a:background="@drawable/list_item_bg"
    a:gravity="center_vertical"
    a:orientation="horizontal"
    a:padding="5dp" >

    <ImageView
        a:id="@+id/flag"
        a:layout_width="40dp"
        a:layout_height="match_parent"
        a:src="@drawable/ru" />

    <TextView
        a:id="@+id/lang_value"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_marginLeft="5dp"
        a:gravity="left"
        a:text="@string/default_text"
        a:textColor="#fff"
        a:textColorHighlight="#f00"
        a:textSize="18sp" />

</LinearLayout>