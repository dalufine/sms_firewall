<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/message_example_title"/>
    
    <TextView        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/messages_position"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/message_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/messages_votes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/message_votes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView        
        android:id="@+id/header_ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_number_with_dots"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/phone_number_ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/messages_examples"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/messages_ex"
        android:layout_width="match_parent"
        android:layout_height="0dip"
	    android:layout_weight="1">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:gravity="center">

        <Button
            android:id="@+id/close_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="@string/close" />

    </LinearLayout>

</LinearLayout>
