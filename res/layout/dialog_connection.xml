<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:gravity="center_horizontal"
    a:minWidth="250dp"
    a:orientation="vertical" >

    <TextView
        a:id="@+id/con_value_title"
        a:text="@string/inet_conn_on"
        a:layout_marginBottom="15dp"
        style="@style/DialogHeaderText" />

    <LinearLayout
        a:layout_width="200dp"
        a:layout_height="wrap_content" >

        <ToggleButton
            a:id="@+id/wifiBtn"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content" />

        <TextView
            a:id="@+id/yourEmail"
            a:layout_width="wrap_content"
            a:layout_height="match_parent"
            a:gravity="center_vertical"
            a:layout_marginLeft="10dp"
            a:text="@string/wi_fi" />
    </LinearLayout>

    <LinearLayout
        a:layout_width="200dp"
        a:layout_height="wrap_content" >

        <ToggleButton
            a:id="@+id/MobNetBtn"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content" />

        <TextView
            a:layout_width="wrap_content"
            a:layout_height="match_parent"
            a:gravity="center_vertical"
            a:layout_marginLeft="10dp"
            a:text="@string/mobile_internet" />
    </LinearLayout>

    <Button
        style="@style/BlackButton"
        a:id="@+id/closeConnPopup"   
        a:layout_marginTop="15dp"     
        a:text="@string/close" />

</LinearLayout>