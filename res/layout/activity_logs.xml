<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logs_tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
            android:padding="5dp">
            <LinearLayout
                android:id="@+id/blocked_logs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ListView
                    android:id="@+id/blocked_logs_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/suspicious_logs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ListView
                    android:id="@+id/suspicious_logs_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/filtered_logs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ListView
                    android:id="@+id/filtered_logs_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onGoBack"
                android:padding="15dp"
                android:text="BP" />
            
            <Button                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onShowFilterDialog"
                android:padding="15dp"
                android:text="FD" />

            <Button                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClearTabLogs"
                android:padding="15dp"
                android:text="CTL" />
            
            <Button                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onResetFilter"
                android:padding="15dp"
                android:text="Reset" />
        </LinearLayout>
    </LinearLayout>
</TabHost>