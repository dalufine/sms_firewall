<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tops_tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/fraud_numbers_top"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ListView
                    android:id="@+id/fraud_numbers_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spam_numbers_top"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ListView
                    android:id="@+id/spam_numbers_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/words_top"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ListView
                    android:id="@+id/words_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout style="@style/NavPanel">

            <ImageButton                
                style="@style/BackButton"                                                                
                android:onClick="onGoBack"/>
            
            <ImageButton                
                style="@style/CheckButton"                                                                
                android:onClick="onCheck"/>
            
             <ImageButton                
                style="@style/ComplainButton"                                                                
                android:onClick="onComplain"/>
             
              <ImageButton                
                style="@style/AddAllButton"                                                                
                android:onClick="onAddAll"/>
        </LinearLayout>
    </LinearLayout>

</TabHost>