<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/activity_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
   
    <!-- Font styles -->
    <style name="StatisticsFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="StatisticsFont.Red">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="StatisticsFont.Green">
        <item name="android:textColor">#0f0</item>
    </style>

    <style name="StatisticsFont.Yellow">
        <item name="android:textColor">#ff0</item>
    </style>

    <style name="GroupHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="DialogHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ListDateFont" parent="StatisticsFont">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#BFF887</item>
    </style>

    <style name="ListContactFont" parent="StatisticsFont">
        <item name="android:textColor">#2987FA</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ListBodyFont" parent="StatisticsFont">
        <item name="android:textColor">#888</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
    </style>

    <style name="FilterListItemFont" parent="ListDateFont">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:lines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- Font styles end -->
    <!-- New styles -->
    <style name="BlackButton">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="BottomPanelButton" parent="BlackButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="BackButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/back_selector</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="AddButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/add_selector</item>
    </style>

    <style name="LogFilterButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/find_sms_selector</item>
    </style>

    <style name="ResetButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/reset_selector</item>
    </style>

    <style name="CheckButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/check_sms_selector</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="OkButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/passed</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="ClearButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/clear_selector</item>
    </style>

    <style name="ComplainButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/complain_selector</item>
    </style>

    <style name="AddAllButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/add_all_selector</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="SettingsButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/settings_selector</item>
    </style>

    <style name="TopButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/top_selector</item>
    </style>

    <style name="LogButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/log_selector</item>
    </style>

    <style name="FiltersButton" parent="BottomPanelButton">
        <item name="android:src">@drawable/filter_selector</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="NavPanel">
        <item name="android:background">@drawable/bottom_panel</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="GroupPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/group_back</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StatisticsPanel" parent="GroupPanel">
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="VCenterPanel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonsPanel" parent="GroupPanel">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">0px</item>
    </style>

    <style name="Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>

    <style name="ImageButtonWithText" parent="BlackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawablePadding">5sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="HelpButton">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@null</item>
        <item name="android:onClick">onHelpClick</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/help_selector</item>
    </style>
    
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>     
    </style>

    <style name="test">
        <item name="android:text">#f00</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>